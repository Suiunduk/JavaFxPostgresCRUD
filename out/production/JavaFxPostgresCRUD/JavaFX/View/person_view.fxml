<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml" fx:controller="JavaFX.Controller.PersonController">
    <children>
        <TextField fx:id="nameField" layoutX="173.0" layoutY="186.0" prefHeight="25.0" prefWidth="255.0" />
        <Label layoutX="173.0" layoutY="169.0" text="Имя" />
        <TextField fx:id="surnameField" layoutX="172.0" layoutY="242.0" prefHeight="25.0" prefWidth="255.0" />
        <Label layoutX="173.0" layoutY="225.0" text="Фамилия" />
        <TextField fx:id="phoneNumberField" layoutX="173.0" layoutY="300.0" prefHeight="25.0" prefWidth="255.0" />
        <Label layoutX="174.0" layoutY="283.0" text="Номер телефона" />
        <DatePicker fx:id="dateOfBirthField" layoutX="173.0" layoutY="357.0" prefHeight="26.0" prefWidth="255.0" />
        <Label layoutX="174.0" layoutY="339.0" text="Дата рождения" />

        <Button fx:id="saveButton" layoutX="309.0" layoutY="403.0" mnemonicParsing="false" onAction="#saveData" prefHeight="28.0" prefWidth="118.0" style="-fx-background-color: #0098f0;" text="Создать" textFill="WHITE">
            <font>
                <Font name="Calibri Bold" size="15.0" />
            </font>
        </Button>
      <Button fx:id="cancelButton" layoutX="173.0" layoutY="403.0" mnemonicParsing="false" prefHeight="28.0" prefWidth="124.0" text="Отмена" textFill="#898686">
         <font>
            <Font name="Calibri Bold" size="15.0" />
         </font>
      </Button>


    </children>
</AnchorPane>
